 


<div>
    <div>
        <p id="notice"><%= notice %></p>
    </div>
    <div id="titre">
    <h1>Inbox</h1>
    </div>
    <div id="dede">
        <section id="left">
              <table>
                <thead>
                  <tr>
                    <th>Objet</th>
                    <th>Etat</th>
                    <th>Date</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @emails.each do |email| %>
                    <tr>
                      <td><%= email.object %></td>
                      <td class="lu-<%= email.id %>"><% email.read %>
                          <% if email.read %>
                                   <p class = "yes"> Lu  </p>
                                <% else %>
                                  <p> Non lu   </p>
                                <%end%>
                      </td>
                      <td><%= email.created_at.strftime("%m/%d/%Y") %></td>
                      <td><%= link_to 'Voir', email, remote: true  %></td>        
                    </tr>
                  <% end %>
                </tbody>                
              </table>
              <br>              
        </section>

        <section id="right">
                <div id="email-body" style="display: none;"></div>
        </section>
    </div>
    <div id="nouv">
        <input type="button" name="Nouveau Mail" value="Nouveau Mail" onclick="self.location.href='emails/new'">
    </div>
</div>